<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App7.CursoPage">
    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="PickerCursos" Title="Cursos" SelectedIndexChanged="PickerSelecionado">
            </Picker>
            <Picker x:Name="PickerListaDisciplinas" Title="Lista de Disciplinas">
            </Picker>
            <Button x:Name="ButtonNovo"
                    Clicked="ButtonNovo_Clicked"
                    Text="Novo Curso"
                    HorizontalOptions="Center"/>
            <Button x:Name="ButtonEditar"
                    Clicked="ButtonEditar_Clicked"
                    Text="Editar Curso"
                    HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>