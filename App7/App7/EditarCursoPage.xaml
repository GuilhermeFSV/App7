<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App7.EditarCursoPage">
    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="Picker0" Title="Cursos"
                    SelectedIndexChanged="SelecionarCurso"></Picker>
            <Entry x:Name="Entry0" Placeholder="Nome do curso" />
            <Button x:Name="Button0" Text="Salvar"
                HorizontalOptions="Center"
                Clicked="SelecionarCurso" />
            <Button x:Name="Button1" Text="Excluir"
                HorizontalOptions="Center"
                Clicked="OnButtonClicked1" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>