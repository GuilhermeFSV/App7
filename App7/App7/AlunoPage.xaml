<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App7.AlunoPage">
    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="Picker" Title="Alunos" SelectedIndexChanged="PickerAluno"></Picker>
            <Button x:Name="NovoAlunoBotao" Text="Novo Aluno"
                    HorizontalOptions="Center"
                    Clicked="OnButtonClicked"/>
            <Button x:Name="EditarAlunoBotao" Text="Editar Aluno"
                    HorizontalOptions="Center"
                    Clicked="OnButtonClicked1"/>
            <Picker x:Name="Picker2" Title="Matrículas"></Picker>
            <Button x:Name="MatricularBotao" Text="Matricular no Curso"
                    HorizontalOptions="Center"
                    Clicked="OnButtonClicked2"/>
            <Picker x:Name="Picker3" Title="Contatos"></Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>