<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App7.EditarCursoPage">
    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="PickerListaCursosExistentes" Title="Cursos">
            </Picker>
            <Entry x:Name="NomeCurso" Placeholder="Nome do curso"/>
            <Button x:Name="ButtonSalvar"
                    Clicked="ButtonSalvar_Clicked"
                    Text="Salvar"
                    HorizontalOptions="Center"/>
            <Button x:Name="ButtonExcluir"
                    Clicked="ButtonExcluir_Clicked"
                    Text="Excluir"
                    HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>